{
    "extensions": [
        "dbankier.vscode-quick-select",
        "Equinusocio.vsc-community-material-theme",
        "Equinusocio.vsc-material-theme",
        "equinusocio.vsc-material-theme-icons",
        "JoeBerria.statusbarerror",
        "ms-python.python"
    ],
    // Se um arquivo já estivere aberto (visível), GoToDefinition
    // vai até esse painel já aberto em vez de abrir o arquivo 
    "workbench.editor.revealIfOpen": true,
    "workbench.startupEditor": "none",
    "statusbarerror.gutter.hint.show": false,
    "statusbarerror.gutter.info.show": false,
    "workbench.editor.showTabs": true,
    "window.menuBarVisibility": "hidden",
    "workbench.colorTheme": "Material Theme Darker",
    "git.suggestSmartCommit": false,
    "workbench.activityBar.visible": false,
    "breadcrumbs.enabled": false,
    "window.titleBarStyle": "custom",
    "editor.fontLigatures": false,
    "editor.fontFamily": "'Input'",
    "editor.formatOnSave": true,
    "editor.fontSize": 16,
    "window.zoomLevel": 0,
    "workbench.statusBar.visible": true,
    "terminal.integrated.fontSize": 16,
    "editor.minimap.enabled": false,
    "terminal.integrated.allowChords": true,
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen",
        "-workbench.action.zoomOut",
        "-workbench.action.zoomIn"
    ],
    "terminal.integrated.env.linux": {
        "VSCODE_CHG_PWD": "${workspaceFolder}",
    },
    "editor.cursorStyle": "line",
    "python.linting.pylintEnabled": false,
    "python.linting.mypyEnabled": true,
    "python.linting.enabled": true,
    "python.formatting.provider": "black",
    "python.sortImports.args": [
        "-rc"
    ],
    "python.pipenvPath": "/home/daltonmatos/.pyenv/shims/pipenv",
    "python.formatting.blackArgs": [
        "--line-length=80"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "python.terminal.activateEnvironment": false,
}