/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fga;
    font:				 	"FiraMono Nerd Font 16";
}

window {
    width:      			210px;
    padding:    			10px;
    border:					0px 0px 1px 0px;
    border-radius:          0px;
    border-color:           @ac;
    location:               center;
    height: 50px;
}

entry {
    expand: 				true;
    text-color:				@ac;
    border:					0px 0px 0px 1px;
    border-color: @bga;
    padding: 0px 0px 0px 10px;
}
