  id bar-bottom
	font pango:Inconsolata 10
	position bottom
	#tray_output none
  verbose yes
  status_command /home/daltonmatos/.bumblebee-status/bumblebee-status -m  memory battery -t solarized-powerline
  #status_command /home/daltonmatos/.bumblebee-status/bumblebee-status -m disk:home load cpu memory battery date time pasink pasource -p interval=2.5 time.format="%H:%M CW %V" date.format="%a, %b %d %Y" home.path=/home -t solarized-powerline
}
